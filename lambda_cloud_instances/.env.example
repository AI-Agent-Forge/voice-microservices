# Lambda Cloud API Key (Settings > API Keys)
LAMBDA_API_KEY=<api-key>

# SSH Key Name (Must match the name in Lambda Cloud Console > SSH Keys)
SSH_KEY_NAME=<your-ssh-key-name>

# Persistent Filesystem Name (Must be created in Console first)
FILESYSTEM_NAME=voice-model-vm-disk

# Instance Configuration
REGION=us-east-1
INSTANCE_TYPE=gpu_1x_a100_sxm4
INSTANCE_NAME=voice-model-worker
IDLE_TIMEOUT_MINUTES=30
INSTANCE_IMAGE=lambda-stack-22-04
