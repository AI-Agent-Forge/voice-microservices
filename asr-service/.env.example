# ASR Service Environment Configuration
# Copy this file to .env and configure as needed

# Service Settings
SERVICE_NAME=asr-service
SERVICE_VERSION=1.0.0
DEBUG=false

# WhisperX Model Settings
# Options: tiny, base, small, medium, large-v2, large-v3
# Larger models = better accuracy but more GPU memory needed
WHISPER_MODEL=base
WHISPER_COMPUTE_TYPE=float16
WHISPER_BATCH_SIZE=16
WHISPER_LANGUAGE=en

# HuggingFace Token (optional - needed for speaker diarization)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=

# Storage Configuration (MinIO/S3)
STORAGE_ENDPOINT=http://minio:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=audio-files
STORAGE_SECURE=false

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Audio Processing Limits
MAX_AUDIO_DURATION_SECONDS=600
TEMP_DIR=/tmp/asr_temp

# Model Cache Directory
MODEL_CACHE_DIR=/models_cache

# Mock Mode (set to true for testing without GPU/model)
MOCK_MODE=false
